<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">
    <!--편의시설-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_toilet"
            android:layout_width="204dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/toilet_icon_xml"
            android:text="   화장실"
            android:textAlignment="viewStart"
            android:textColor="#03A9F4"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_elevator"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/elevator_icon_xml"
            android:text="   엘레베이터"
            android:textColor="#03A9F4"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <CheckBox
            android:id="@+id/checkbox_hospital"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/hospital_icon_xml"
            android:text="   병원"
            android:textColor="#03A9F4"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkbox_rest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/rest_icon_xml"
            android:text="   휴식"
            android:textColor="#03A9F4"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:text="지도 들어갈 공간 "
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_map"
            android:layout_width="138dp"
            android:layout_height="70dp"
            android:background="@drawable/mapiconshape"
            android:backgroundTintMode="src_atop"
            android:drawableTop="@drawable/mapiconvxml"
            android:text="지도"
            android:textColor="#03A9F4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_conv"
            android:layout_width="138dp"
            android:layout_height="70dp"
            android:background="@drawable/conviconshape"
            android:drawableTop="@drawable/coniconxml"
            android:text="편의시설"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_review"
            android:layout_width="138dp"
            android:layout_height="70dp"
            android:background="@drawable/mapiconshape"
            android:drawableTop="@drawable/reviewiconxml"
            android:text="리뷰"
            android:textColor="#03A9F4"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>